{
  "name": "@couponleaks/infra",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "cdk": "cdk",
    "synth:dev": "cdk synth -c env=dev",
    "synth:staging": "cdk synth -c env=staging",
    "synth:prod": "cdk synth -c env=prod",
    "deploy:dev": "cdk deploy --all -c env=dev --require-approval never",
    "deploy:staging": "cdk deploy --all -c env=staging --require-approval never",
    "deploy:prod": "cdk deploy --all -c env=prod",
    "destroy:dev": "cdk destroy --all -c env=dev --force",
    "destroy:staging": "cdk destroy --all -c env=staging --force",
    "destroy:prod": "cdk destroy --all -c env=prod --force"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.211.0",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
